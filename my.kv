<MyGrid>

    python_polynome_in: label_polynome_in
    python_polynome_out: label_polynome_out
    python_polynome_min_in: label_polynome_min_in
    python_polynome_max_in: label_polynome_max_in
    python_polynome_pace_in: label_polynome_pace_in
    python_polynome_min_out: label_polynome_min_out 
    python_polynome_max_out: label_polynome_max_out 
    python_polynome_pace_out: label_polynome_pace_out 
    python_polynome_tangent_in: label_polynome_tangent_in
    python_polynome_tangent_out: label_polynome_tangent_out
    python_polynome_roots_out: label_roots
    python_polynome_im_in: label_polynome_im_in
    python_polynome_im_out: label_polynome_im_out
    python_polynome_derivate_out: label_polynome_derivate_out
    python_polynome_primitive_out: label_polynome_primitive_out
    python_polynome_a_in: label_polynome_a_in
    python_polynome_b_in: label_polynome_b_in
    python_polynome_integral_out: label_polynome_integral_out
    python_polynome_even_out: label_polynome_even_out
    python_polynome_uneven_out: label_polynome_uneven_out

    GridLayout:
        size:root.width, root.height
        rows:2
        GridLayout:#first row containing MIN, MAX, PACE
            size_hint: 0.5, 0.2
            cols:3
            GridLayout:#MIN
                padding:10
                cols:1
                rows:2
                GridLayout:
                    cols:1
                    rows:1
                    Label:
                        id:label_polynome_min_out
                        text:"Min"
                        background_color: 0, 1, 0, 1
                        canvas.before:
                            Color:
                                rgba: self.background_color
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [10]
                GridLayout:
                    cols:2
                    rows:1
                    RoundedButton:
                        text:"set"
                        on_press:root.min_uptdate()
                    TextInput:
                        id:label_polynome_min_in
                        multiline:False
                        input_filter:"float"
            GridLayout:#MAX
                padding:10
                cols:1
                rows:2
                GridLayout:
                    cols:1
                    rows:1
                    Label:
                        id:label_polynome_max_out
                        text:"Max"
                        background_color: 1, 0, 0, 1
                        canvas.before:
                            Color:
                                rgba: self.background_color
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [10]
                GridLayout:
                    cols:2
                    rows:1
                    RoundedButton:

                        text:"set"
                        on_press:root.max_uptdate()
                    TextInput:
                        id:label_polynome_max_in
                        multiline:False
                        input_filter:"float"
                    
            GridLayout:#PACE
                cols:1
                rows:2
                padding:10
                GridLayout:
                    cols:1
                    rows:1
                    Label:
                        id:label_polynome_pace_out
                        text:"PACE"
                        background_color: 1, 0, 0, 1
                        canvas.before:
                            Color:
                                rgba: self.background_color
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [10]
                GridLayout:
                    cols:2
                    rows:1
                    RoundedButton:
                        text:"set"
                        on_press:root.pace_uptdate()
                    TextInput:
                        id:label_polynome_pace_in
                        multiline:False
                        input_filter:"float"
        GridLayout:#Pricipal grid layout

            rows:7

            GridLayout:#polynom modifications
                
                cols:3
                Label:
                    text:"f(x) ="
                    size_hint:{.2, 1}  
                GridLayout:
                    rows:1
                    cols:1
                    padding:(0, 30, 0, 30)                    
                    TextInput:
                        id:label_polynome_in
                        multiline:False
                GridLayout:
                    size_hint: (.2, .01)
                    rows:1
                    cols:1
                    padding:(5, 30, 5, 30)
                    RoundedButton:
                        
                        text:"OK"
                        #background_color:app.button
                        #background_normal:''
                        on_press:root.polynom_uptdate()
            GridLayout:#polynom, derivate and integral display
                rows:3
                cols:1
                Label:
                    id:label_polynome_out
                    text:"polynom"
                    background_color: 0, 0, 1, 1
                    canvas.before:
                        Color:
                            rgba: self.background_color
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [15]
                Label:
                    id:label_polynome_derivate_out
                    text:"derivate"
                    background_color: 1, 0, 0, 1
                    canvas.before:
                        Color:
                            rgba: self.background_color
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [15]
                Label:
                    id:label_polynome_primitive_out
                    text:"primitive"
                    background_color: 0, 1, 0, 1
                    canvas.before:
                        Color:
                            rgba: self.background_color
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [15]



            
            GridLayout:#tangent calculation
                cols: 3
                rows:1
                Label:
                    size_hint: {.5, 1}
                    text:"tangent at a ="
                    
                GridLayout:
                    cols:2
                    rows:1
                    size_hint:{.6, .5}
                    padding:0, 30, 0, 30
                    TextInput:
                        id:label_polynome_tangent_in
                        multiline:False
                        input_filter:"float"
                    RoundedButton:
                        text:"OK"
                        on_press:root.tangent_uptdate()
                GridLayout:
                    cols:1
                    rows:1
                    padding:(5, 30, 5, 30)
                    Label:
                        id:label_polynome_tangent_out
                        text:"-"
                        background_color: 0, 0, 1, 1
                        canvas.before:
                            Color:
                                rgba: self.background_color
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [15]
            GridLayout:#integral calculation
                cols:1
                rows:1
                padding:(0, 30, 0, 30)
                GridLayout:
                    cols:6
                    Label:
                        size_hint:{.5, 1}
                        text:"integral\nbetween"
                    TextInput:
                        size_hint:{.5, 1}
                        id:label_polynome_a_in
                        multiline:False
                        input_filter:"float"
                    Label:
                        size_hint:{.3, 1}
                        text:"and"
                    TextInput:
                        size_hint:{.5, 1}
                        id:label_polynome_b_in
                        multiline:False
                        input_filter:"float"
                    RoundedButton:
                        size_hint:{.5, 1}
                        text:"OK"
                        on_press:root.integral_calculation()
                    GridLayout:
                        rows:1
                        cols:1
                        padding:(5, 0, 5, 0)
                        Label:
                            id:label_polynome_integral_out
                            text:"-"
                            background_color: 0, 0, 1, 1
                            canvas.before:
                                Color:
                                    rgba: self.background_color
                                RoundedRectangle:
                                    size: self.size
                                    pos: self.pos
                                    radius: [15]
            GridLayout:#roots display
                rows:1
                cols:1
                padding:(0, 30, 0, 30)
                GridLayout:
                    cols:2
                    GridLayout:
                        rows:1
                        cols:1
                        padding:(5, 0, 5, 0)
                        Label:
                            id:label_roots
                            size_hint:0.5, 1
                            text:"roots"
                            background_color: 0, 0, 1, 1
                            canvas.before:
                                Color:
                                    rgba: self.background_color
                                RoundedRectangle:
                                    size: self.size
                                    pos: self.pos
                                    radius: [15]
                    RoundedButton:
                        size_hint:0.1, 1
                        text:"Calc."
                        on_press:root.show_roots()

            GridLayout:#im, even and uneven
                cols:3
                GridLayout:
                    rows:1
                    cols:1
                    padding:(0, 30, 0, 30)
                    GridLayout:
                        cols:4
                        Label:
                            text:"f("
                            size_hint:{.2, 1}
                        GridLayout:
                            cols:1
                            rows:1
                            padding:(0, 5, 0, 5)
                            size_hint:{1, .3}
                            TextInput:
                                id:label_polynome_im_in
                                multiline: False
                                input_filter:'float'
                        Label:
                            size_hint:{.5, 1}
                            id:label_polynome_im_out
                            text:") = -"
                        RoundedButton:
                            size_hint:{.3, .2}
                            text:"Go"
                            on_press:root.evaluation()
                GridLayout:
                    rows:1
                    padding:(5, 30, 5, 30)
                    GridLayout:
                        rows:1
                        Label:
                            id:label_polynome_even_out
                            text:"even: -"
                            background_color: 0, 0, 1, 1
                            canvas.before:
                                Color:
                                    rgba: self.background_color
                                RoundedRectangle:
                                    size: self.size
                                    pos: self.pos
                                    radius: [15]
                GridLayout:
                    rows:1
                    padding:(5, 30, 5, 30)
                    GridLayout:
                        rows:1
                        Label:
                            id:label_polynome_uneven_out
                            text:"uneven: -"
                            background_color: 0, 0, 1, 1
                            canvas.before:
                                Color:
                                    rgba: self.background_color
                                RoundedRectangle:
                                    size: self.size
                                    pos: self.pos
                                    radius: [15]

<RoundedButton@Button>
	background_color: (0,0,0,0)
	background_normal: ''
	canvas.before:
		Color:
			rgba: 0.411, 0.47, 0.68, 1
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [10]